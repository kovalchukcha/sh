<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAdress">

    <TextView
        android:id="@+id/textView"
        android:layout_width="417dp"
        android:layout_height="114dp"
        android:background="#2A2A37"
        android:padding="35dp"
        android:text="Добавить адрес"
        android:textAlignment="center"
        android:textColor="#F1EEEE"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/materialButton"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:background="@drawable/radius_style"
        android:backgroundTint="#0B509F"
        android:text="Сохранить"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.638" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bluecirclebutton"
        android:fontFamily="casual"
        android:hint="Адрес"
        android:paddingLeft="15dp"
        android:textColorHint="#74575656"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Добавьте адрес своего дома в формате\n
г. Название города, ул. Название улицы, д.\n Номер дома"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>