<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/homeIconImageView"
        android:layout_width="119dp"
        android:layout_height="108dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="146dp"
        android:layout_height="67dp"
        android:text="@string/example_string"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeIconImageView"
        app:layout_constraintVertical_bias="0.045" />

    <LinearLayout
        android:id="@+id/pinDotsLayout"
        android:layout_width="143dp"
        android:layout_height="53dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/pin_code_background" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/pin_code_background" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/pin_code_background" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/pin_code_background" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="276dp"
        android:layout_height="241dp"
        android:layout_marginTop="5dp"
        android:background="#94B0CAD6"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinDotsLayout"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:onClick="onClick"
            android:id="@+id/button1"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:onClick="onClick"
            android:id="@+id/button2"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:padding="15dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:onClick="onClick"
            android:id="@+id/button3"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:onClick="onClick"
            android:id="@+id/button4"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:onClick="onClick"
            android:id="@+id/button5"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:onClick="onClick"
            android:id="@+id/button6"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:onClick="onClick"
            android:id="@+id/button7"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:onClick="onClick"
            android:id="@+id/button8"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:onClick="onClick"
            android:id="@+id/button9"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-light"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>